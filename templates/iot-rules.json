{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Parameters": {
    },
    "Resources": {
        "nodemcuTopicRule": {
            "Type": "AWS::IoT::TopicRule",
            "Properties": {
                "RuleName": "nodemcuHandleIncoming",
                "TopicRulePayload": {
                    "RuleDisabled": "false",
                    "Sql": "SELECT *, timestamp() as timestamp, (switchSessionLength / 1000) AS switchSessionLengthSec, (switchSessionLength / 1000 / 60) AS switchSessionLengthMin, (switchSessionLength / 1000 / 60 / 60) AS switchSessionLengthHour FROM 'localgateway_to_awsiot'",
                    "Actions": [
                        {
                            "S3": {
                                "BucketName": {
                                    "Ref": "inputBucket"
                                },
                                "RoleArn": { "Fn::GetAtt": ["iotRole", "Arn"] },
                                "Key": "${topic()}/${chipId}/${timestamp()}"
                            }
                        },
                        {
                            "Elasticsearch": {
                                "Endpoint": { "Fn::Join": ["", ["https://", { "Fn::GetAtt": [ "inputElasticsearch", "DomainEndpoint" ] }]] },
                                "Id": "${newuuid()}",
                                "Index": "iot-nodemcu",
                                "RoleArn": { "Fn::GetAtt": ["iotRole", "Arn"] },
                                "Type": "sensor-data"
                            }
                        },
                        {
                            "CloudwatchMetric": {
                                "MetricName": "co2",
                                "MetricNamespace": "nodemcu-sensors",
                                "MetricUnit": "None",
                                "MetricValue": "${co2}",
                                "RoleArn": { "Fn::GetAtt": ["iotRole", "Arn"] },
                            }
                        },
                        {
                            "CloudwatchMetric": {
                                "MetricName": "pressure",
                                "MetricNamespace": "nodemcu-sensors",
                                "MetricUnit": "None",
                                "MetricValue": "${pressure}",
                                "RoleArn": { "Fn::GetAtt": ["iotRole", "Arn"] },
                            }
                        },
                        {
                            "CloudwatchMetric": {
                                "MetricName": "humidity",
                                "MetricNamespace": "nodemcu-sensors",
                                "MetricUnit": "None",
                                "MetricValue": "${humidity}",
                                "RoleArn": { "Fn::GetAtt": ["iotRole", "Arn"] },
                            }
                        },
                        {
                            "CloudwatchMetric": {
                                "MetricName": "temperature",
                                "MetricNamespace": "nodemcu-sensors",
                                "MetricUnit": "None",
                                "MetricValue": "${temperature}",
                                "RoleArn": { "Fn::GetAtt": ["iotRole", "Arn"] },
                            }
                        },
                        {
                            "CloudwatchMetric": {
                                "MetricName": "gasMq2",
                                "MetricNamespace": "nodemcu-sensors",
                                "MetricUnit": "None",
                                "MetricValue": "${gasMq2}",
                                "RoleArn": { "Fn::GetAtt": ["iotRole", "Arn"] },
                            }
                        },
                        {
                            "CloudwatchMetric": {
                                "MetricName": "waterTemp",
                                "MetricNamespace": "nodemcu-sensors",
                                "MetricUnit": "None",
                                "MetricValue": "${waterTemp}",
                                "RoleArn": { "Fn::GetAtt": ["iotRole", "Arn"] },
                            }
                        }
                    ]
                }
            }
        },

        "inputBucket": {
            "Type": "AWS::S3::Bucket",
            "DeletionPolicy": "Retain",
            "Properties": {
                "BucketName": "iot-nodemcu-incoming"
            }
        },

        "inputElasticsearch": {
            "Type": "AWS::Elasticsearch::Domain",
            "Properties": {
                "DomainName": "iot-nodemcu",
                "ElasticsearchVersion": "5.1",
                "ElasticsearchClusterConfig": {
                    "DedicatedMasterEnabled": "true",
                    "InstanceCount": "2",
                    "ZoneAwarenessEnabled": "true",
                    "InstanceType": "t2.small.elasticsearch",
                    "DedicatedMasterType": "t2.small.elasticsearch",
                    "DedicatedMasterCount": "2"
                },
                "EBSOptions": {
                    "EBSEnabled": true,
                    "Iops": 0,
                    "VolumeSize": 20,
                    "VolumeType": "gp2"
                },
                "SnapshotOptions": {
                    "AutomatedSnapshotStartHour": "0"
                },
                "AccessPolicies": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                          "Effect": "Allow",
                          "Principal": {
                              "AWS": { "Fn::GetAtt": ["iotRole", "Arn"] }
                          },
                          "Action": "es:ESHttpPut",
                          "Resource": "arn:aws:es:*:*:*/*"
                        },
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "AWS": "*"
                            },
                            "Condition": {
                                "IpAddress": {
                                    "aws:SourceIp": [
                                        "172.31.0.0/16",
                                        "10.0.0.0/16",
                                        "89.8.0.0/15",
                                        "176.11.0.0/16",
                                        "109.189.0.0/16",
                                        "212.45.160.0/19"
                                    ]
                                }
                            },
                            "Action": "es:*",
                            "Resource": "arn:aws:es:*:*:*/*"
                        }
                    ]
                },
                "AdvancedOptions": {
                    "rest.action.multi.allow_explicit_index": "true"
                }
            }
        },

        "iotRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [{
                        "Effect": "Allow",
                        "Principal": {
                            "Service": [
                                "iot.amazonaws.com"
                            ]
                        },
                        "Action": [
                            "sts:AssumeRole"
                        ]
                    }]
                }
            }
        },
        "iotPolicy": {
            "Type": "AWS::IAM::Policy",
            "DependsOn": [
                "iotRole", "inputBucket"
            ],
            "Properties": {
                "Roles": [{
                    "Ref": "iotRole"
                }],
                "PolicyName": "iot-policy",
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Action": ["s3:*"],
                            "Resource": "arn:aws:s3:::iot-*"
                        },
                        {
                            "Effect": "Allow",
                            "Action": [
                                "s3:GetBucketLocation",
                                "s3:ListAllMyBuckets"
                            ],
                            "Resource": "arn:aws:s3:::*"
                        },
                        {
                            "Effect": "Allow",
                            "Action": ["es:*"],
                            "Resource": "arn:aws:es:*:*:*/*"
                        },
                        {
                            "Effect": "Allow",
                            "Action": "cloudwatch:PutMetricData",
                            "Resource": "*"
                        }
                    ]
                }
            }
        }
    },

    "Outputs": {
        "iotElasticsearchURL" : {
            "Description" : "IoT Elasticsearch URL",
            "Value" : { "Fn::Join": ["", ["https://", { "Fn::GetAtt": [ "inputElasticsearch", "DomainEndpoint" ] }]] },
            "Export" : { "Name" : "iotElasticsearchURL" }
        }
    }

}
